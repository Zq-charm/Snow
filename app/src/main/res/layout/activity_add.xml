<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

<TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题* :"
        android:textSize="30dp"
        android:textStyle="bold"
        >
    </TextView>
    <EditText
        android:id="@+id/act_title_edit"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/ic_login_psw_bg"
        android:drawablePadding="10dp"
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        android:hint="请输入标题(必填)"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#a3a3a3"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/text_title"/>

    <TextView
        android:id="@+id/text_miaoshu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活动简介 :"
        android:textStyle="italic"
        android:textSize="30dp"

        android:layout_below="@+id/act_title_edit">
    </TextView>
    <EditText
        android:id="@+id/act_miaoshu_edit"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/ic_login_psw_bg"
        android:drawablePadding="10dp"
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        android:hint="请输入简介"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#a3a3a3"
        android:textSize="14sp"
        android:layout_below="@+id/act_title_edit"
        android:layout_toRightOf="@+id/text_miaoshu"/>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_below="@+id/act_miaoshu_edit">
    <TextView
        android:id="@+id/text_renshu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人数限制 :"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_gravity="center_vertical"
>
    </TextView>
    <NumberPicker
        android:id="@+id/renshu_picker"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textStyle="italic"
        android:text="人" />
</LinearLayout>
</RelativeLayout>